# MCP Server Configuration
MCP_SERVER_NAME=ai-prompt-guide-mcp
MCP_SERVER_VERSION=1.0.0

# Logging
LOG_LEVEL=info

# Reference Processing
# Controls how deep to traverse document references when loading linked content (1-5)
REFERENCE_EXTRACTION_DEPTH=3

# File Operations
DOCS_BASE_PATH=./.ai-prompt-guide/docs
MAX_FILE_SIZE=10485760
MAX_FILES_PER_OPERATION=100

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100

# Safety
ENABLE_FILE_SAFETY_CHECKS=true
ENABLE_MTIME_PRECONDITION=true